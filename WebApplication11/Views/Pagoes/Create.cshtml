@model WebApplication11.Models.Pago

@{
    ViewData["Title"] = "Crear Pago";
}

<h1 class="mb-4">Crear Pago</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="ReservaId" class="form-label"></label>
                <select asp-for="ReservaId" class="form-control" asp-items="ViewBag.ReservaId"></select>
                <span asp-validation-for="ReservaId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Monto" class="form-label"></label>
                <input asp-for="Monto" class="form-control" />
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MetodoPago" class="form-label"></label>
                <input asp-for="MetodoPago" class="form-control" />
                <span asp-validation-for="MetodoPago" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Estado" class="form-label"></label>
                <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-custom-primary" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
            </div>
        </form>
    </div>
</div>
