@model IEnumerable<WebApplication11.Models.Personal>

@{
    ViewData["Title"] = "Lista de Personal";
}

<h1 class="mb-4">Lista de Personal</h1>

<p>
    <a asp-action="Create" class="btn btn-custom-primary mb-3">Crear Nuevo Personal</a>
</p>

<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.Puesto)</th>
                <th>@Html.DisplayNameFor(model => model.CorreoElectronico)</th>
                <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Puesto)</td>
                    <td>@Html.DisplayFor(modelItem => item.CorreoElectronico)</td>
                    <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.PersonalId" class="btn btn-sm btn-warning">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.PersonalId" class="btn btn-sm btn-info">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.PersonalId" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
